@model CHTC.Models.TbKhacHang

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ViewGD.cshtml";
}

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">Quản lý khách hàng</li>
            <li class="breadcrumb-item"><a href="#">Xóa</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">Xóa thông tin</h3>
                <div class="tile-body">

                    <div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Họ và tên: </p>

                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.HoVaTen)

                            </div>
                            <div class="col-md-4">
                                <p>Số điện thoạt:</p>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.Sdt)

                            </div>
                            <div class="col-md-4">
                                <p>Email:</p>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.Email)

                            </div>
                            <div class="col-md-4">
                                <p>Địa chỉ:</p>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.DiaChi)

                            </div>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ID" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

