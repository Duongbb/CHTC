@model IEnumerable<CHTC.Models.TbNhaCc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ViewGD.cshtml";
}

    <main class="app-content">
      <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
          <li class="breadcrumb-item active"><a href="#"><b>Quản lý Nhà cung cấp</b></a></li>
        </ul>
        <div id="clock"></div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <div class="tile-body">
              <div class="row element-button">
                <div class="col-sm-2">
  
                  <a class="btn btn-add btn-sm" asp-action="Create" title="Thêm"><i class="fas fa-plus"></i>
                    Tạo mới</a>
                </div>
                
              </div>
              <table class="table table-hover table-bordered" id="sampleTable">
                <thead>
                  <tr>
                    <th width="10"><input type="checkbox" id="all"></th>
                                <th>
                                    <p>Mã nhà cung cấp</p>
                                </th>
                                <th>
                                    <p>Tên nhà cung cấp</p>
                                </th>
                                <th>
                                    <p>Số điện thoại</p>
                                </th>
                                <th>
                                    <p>Địa chỉ </p>
                                </th>
                                <th>
                                    <p>Tính năng</p>
                                </th>
                  </tr>
                </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td width="10"><input type="checkbox" name="check1" value="1"></td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.MaNhaCc)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.TenNhaCc)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.Sdt)
                                </td>
                                <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td>
                                        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                                        <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.ID">Details</a> 
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                </td>
                            </tr>
                            }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>
