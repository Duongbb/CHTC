@model CHTC.Models.TbSanPham
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ViewGD.cshtml";
    
}

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">Quản lý sản phẩm</li>
            <li class="breadcrumb-item"><a href="#">Thông tin</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">Thông tin sản phẩm </h3>
                <div class="tile-body">

                    <div>
                        <div class="row">
                            <div class="col-md-4">
                                <p>Mã sản phẩm: </p>

                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.MaSanPham)

                            </div>
                            <div class="col-md-4">
                                <p>Tên sản phẩm:</p>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.TenSanPham)

                            </div>
                            <div class="col-md-4">
                                <p>Mô tả:</p>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.MoTa)

                            </div>
                            <div class="col-md-4">
                                <p>Ảnh sản phẩm:</p>
                            </div>
                            <div class="col-md-8 img-admin">
                                <img src="~/AnhSp/@Model.AnhSp" />

                            </div>
                            <div class="col-md-4">
                                <p> Mã Loại hàng:</p>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.loaihangID.TenLh)
                            </div>
                            <div class="col-md-4">
                                <p>Tình trạng:</p>
                            </div>
                            <div class="col-md-8">
                                @if (Model.TinhTrang == true)
                                {
                                    <p>Đã bán</p>

                                }
                                else
                                {
                                    <p> Chưa bán</p>
                                }
                            </div>
                            <div class="col-md-4">
                                <p>Giá thị trường:</p>
                            </div>
                            <div class="col-md-8">
                                @Html.DisplayFor(model => model.Gia)
                            </div>
                            
                            <div class="col-md-8">
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
                                <a class="btn btn-info" asp-action="Index">Back to List</a>
                            </div>

                        </>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    </div>
</main>

