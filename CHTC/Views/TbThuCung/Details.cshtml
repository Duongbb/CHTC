@model CHTC.Models.TbThuCung

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ViewGD.cshtml";
}

<main class="app-content">
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">Quản lý thú cưng</li>
            <li class="breadcrumb-item"><a href="#">Thông tin</a></li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <h3 class="tile-title">Thông tin thú cưng </h3>
                <div class="tile-body">

                        <div>
       <div class = "row">
            <div class="col-md-4">
               <p>Mã thú cưng: </p>

            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.MaThuCung)

            </div>
            <div class="col-md-4">
                <p>Tên thú cưng:</p>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Ten)

            </div>
            <div class="col-md-4">
                <p>Tuối(tháng):</p>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Tuoi)

            </div>
            <div class="col-md-4">
                <p>Giới tính:</p>
            </div>
            <div class="col-md-8">
                                @if (Model.GioiTinh == true)
                                {
                                    <p>Đực</p>

                                }
                                else
                                {
                                    <p>Cái</p>
                                }
                                

            </div>
            <div class="col-md-4">
                <p>Giống:</p>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Giong)

            </div>
            <div class="col-md-4">
                <p>Mô tả:</p>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.MoTa)

            </div>
            <div class="col-md-4">
                <p>Ảnh:</p>
            </div>
            <div class="col-md-8 img-admin">
               <img src="~/AnhPet/@Model.AnhTc"  /> 

            </div>
            <div class="col-md-4">
                <p> Mã Loại hàng:</p>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.loaihangID.TenLh)
            </div>
            <div class="col-md-4">
                <p>Tiêm chủng:</p>
            </div>
            <div class="col-md-8">
                                @if (Model.TinhTrang == true)
                                {
                                    <p>Đã tiêm</p>

                                }
                                else
                                {
                                    <p> Chưa tiêm</p>
                                }
            </div>
            <div class="col-md-4">
                <p>Giá thị trường:</p>
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Gia)
            </div>
            <div class="col-md-4">
                <p>Trạng thái:</p>
            </div>
            <div class="col-md-8">
                 @if (Model.TrangThai == true)
                    {
                        <p>Đã bán</p>

                    }
                    else
                    {
                        <p>Chưa bán</p>
                    }
            </div>
                            <div class="col-md-8">
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
                                <a class="btn btn-info" asp-action="Index">Back to List</a>
                            </div>

       </div>
    </div>
  
            </div>
        </div>
    </div>
    </div>
</main>
