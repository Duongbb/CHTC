@model CHTC.Models.TbThuCung

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ViewGD.cshtml";
}
<main class="app-content">
      <div class="app-title">
        <ul class="app-breadcrumb breadcrumb">
          <li class="breadcrumb-item">Quản lý thú cưng</li>
          <li class="breadcrumb-item"><a href="#">Sửa đổi</a></li>
        </ul>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tile">
            <h3 class="tile-title">Cập nhật thông tin</h3>
            <div class="tile-body">
              <div class="row element-button">
                
  
              </div>
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID" />
                        <div class="form-group">
                            <label> Mã thú cưng:  </label>
                            <input asp-for="MaThuCung" class="form-control" />
                            <span asp-validation-for="MaThuCung" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Tên thú cưng: </label>
                            <input asp-for="Ten" class="form-control" />
                            <span asp-validation-for="Ten" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Tuổi(tháng):</label>
                            <input asp-for="Tuoi" class="form-control" />
                            <span asp-validation-for="Tuoi" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div>
                                <label> Giới tính: </label>
                                Đực @Html.RadioButton("GioiTinh","True")
                                Cái @Html.RadioButton("GioiTinh","False")
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Giống </label>
                            <input asp-for="Giong" class="form-control" />
                            <span asp-validation-for="Giong" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Mô tả: </label>
                            <input asp-for="MoTa" class="form-control" />
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Ảnh thú cưng: </label>
                            <img src="~/AnhPet/@Model.AnhTc" style="with:80; heigh=45;" />
                            <input asp-for="Imagefile" accept="image/*" />
                            <span asp-validation-for="AnhTc" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Mã Loại hàng:</label>
                            <input asp-for="IDloaiHang" class="form-control" />
                            <span asp-validation-for="IDloaiHang" class="text-danger" ></span>
                        </div>
                        <div class="form-group">
                            <div>
                                <label>Tình trạng:</label>
                                Đã tiêm @Html.RadioButton("TinhTrang","True")
                                Chưa tiêm @Html.RadioButton("TinhTrang","False")
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Giá thị trường: </label>
                            <input asp-for="Gia" class="form-control" />
                            <span asp-validation-for="Gia" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div>
                                <label>Trạng thái: </label>
                                Đã bán @Html.RadioButton("TrangThai","True")
                                Chưa bán @Html.RadioButton("TrangThai","False")
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a class="btn btn-cancel" asp-action="Index">Hủy bỏ</a>
                        </div>
                    </form>
            <div class="tile-footer">
            </div>
          </div>
        </div>
        </div>
        </div>
    </main>
